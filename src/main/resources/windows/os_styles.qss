PathView {
	padding: 1ex;
}

QStatusBar {
	min-height: 6ex;
}

Overlay {
	max-width: 25em;
}

QMenu {
	background-color: white;
	border: 1px solid #a0a0a0;
	padding: 2px;
	font-family: "Segoe UI";
	color: black;
}

QMenu::item {
	padding: 1.5ex 5ex 1.5ex 10ex;
	margin-top: .5ex;
	margin-bottom: .5ex;
	min-width: 40ex;
}

QMenu::item:selected {
	background-color: #e5e5e5;
}

QMenu::separator {
	height: 1px;
	background: #bfbfbf;
	margin-left: 10ex;
}