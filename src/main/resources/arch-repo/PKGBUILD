# Maintainer: dmitry.romanov <dmitry.romanov85@gmail.com>
# Maintainer: ${author} <${author_email}>

pkgname=fman
pkgver=${version}
pkgrel=1
pkgdesc="${description}"
arch=('x86_64')
url="https://fman.io"
license=('custom')
depends=(${deps})
optdepends=(${opt_deps})

source=('https://fman.io/updates/arch/fman-${version}.pkg.tar.xz')
noextract=("${source[@]##*/}")

sha256sums=('${sha256}')

package() {
	tar xf "${srcdir}/fman-${version}.pkg.tar.xz" -C "${pkgdir}" --exclude='.INSTALL' --exclude='.PKGINFO' --exclude='.MTREE'
}
